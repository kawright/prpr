-- hello.ppb - Hello world example

-- Setup
fdback          off
initgraph
dim             40 5

-- Drawing
hrule           1 -
putc            2 "Hello, world!"
hrule           3 +

-- Export to PNG
pngdraw
pngsv           "example.png"

-- Teardown
quitgraph
quit
