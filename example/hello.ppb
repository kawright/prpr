-- hello.ppb - Hello world example

-- Setup
fdback          off
initgraph
dim             40 15

-- Drawing
fbox            4 4 34 10 # 
hrule           1 -
putc            7 "Hello, world!"
hrule           13 +

-- Export to PNG
pngdraw
pngsv           "example.png"

-- Teardown
quitgraph
quit
